
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /locations/{providerId} {
      allow write: if request.auth != null && request.auth.uid == providerId;
      allow read: if request.auth != null;
    }
    match /jobs/{jobId}/counterOffers/{offerId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.providerId;
      allow read: if request.auth != null;
      allow update: if request.auth != null;
    }
    match /{document=**} { allow read, write: if false; }
  }
}
